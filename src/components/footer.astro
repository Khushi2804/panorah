<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Footer</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Black+Mango&display=swap"
      rel="stylesheet"
    />

    <style>
      body {
        margin: 0;
        font-family: "Nunito", Arial, sans-serif;
      }

      /* General Footer Styling */
      footer {
        background-image: linear-gradient(90deg, #fe4d00, #fe8200);
        color: #fff;
        padding: 40px 20px;
        font-size: 13px;
        line-height: 25px;
        text-align: center;
        height: auto;
      }

      /* Responsive Flexbox Row */
      .row {
        width: 90%;
        margin: auto;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 20px;
      }

      /* Column Styling */
      .col {
        flex-basis: 30%; /* Default for larger screens */
        text-align: center;
        padding: 10px;
      }

      .col h4 {
        font-size: 1.2rem;
        margin-bottom: 10px;
      }

      .boldd {
        font-weight: bold;

        font-family: "Black Mango", sans-serif;
      }

      .col a {
        color: #fff;
        text-decoration: none;
        display: block;
        margin: 5px 0;
        transition: color 0.3s;
      }

      .khu {
        color: #fff;
        text-decoration: none;
        display: block;
        margin: 5px 0;
        transition: color 0.3s;
        cursor: pointer;
      }

      .col a:hover,
      .khu:hover {
        color: #5f8911;
      }

      /* Logo */
      .logo {
        width: 200px;
        height: auto;
        margin-bottom: 20px;
      }

      .big {
        font-size: 20px;
      }

      /* Social Icons */
      .social-icons {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 15px;
        margin-top: 20px;
      }

      .social-icons a {
        color: white;
        font-size: 25px;
        transition:
          transform 0.3s ease,
          filter 0.3s ease;
      }

      .social-icons a:nth-child(1):hover {
        color: #0077b5;
      }

      .social-icons a:nth-child(2):hover {
        color: #1da1f2;
      }

      .social-icons a:nth-child(3):hover {
        color: #e4405f;
      }

      .social-icons a:nth-child(4):hover {
        color: #4267b2;
      }

      /* Footer Links */
      .footer-links {
        margin-top: 20px;
        font-size: 14px;
      }

      .footer-links a {
        color: #fff;
        text-decoration: none;
        margin: 0 5px;
      }

      .footer-links a:hover {
        color: #5f8911;
      }

      /* Copyright */
      .copyright {
        margin-top: 20px;
        font-size: 12px;
      }

      /* Responsive Adjustments */
      @media (max-width: 768px) {
        .logo {
          width: 250px; /* Smaller logo for very small screens */
        }
        .col {
          flex-basis: 100%; /* Full width for smaller screens */
          text-align: center;
        }

        .social-icons {
          margin-top: 30px;
          gap: 20px; /* Reduce gap for smaller screens */
        }
      }

      @media (max-width: 480px) {
        .logo {
          width: 250px; /* Smaller logo for very small screens */
        }

        .big {
          font-size: 18px; /* Slightly smaller text */
        }

        .social-icons a {
          font-size: 20px; /* Smaller icons */
        }
      }
    </style>
  </head>
